#include<stdio.h>
int main()
{
    int i,n,prime=1;
    printf("enter the number to check if it is prime or not-:\n");
    scanf("%d",&n);
    if(n==1||n==0)
    prime=0;
    else
    {
    for(i=2;i<n;i++)
    {
       if (n%i==0)
       {
       prime=0;
       break;
       }
    }
    }  
    if(prime==0)
    printf("entered no. is not a prime number");
    else
    printf("enterd no. is a prime number");
    return 0;
}
